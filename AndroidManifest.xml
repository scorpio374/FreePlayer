<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.sz.free.player"
    android:versionCode="101"
    android:versionName="0.1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- for umeng -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity
            android:name="tv.danmaku.ijk.media.demo.VideoPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
        </activity>
        
        <activity
            android:name="tv.danmaku.ijk.media.demo.PortalActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
     	<!-- 	 <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -->
        </activity>
        
        <activity
            android:name="tv.danmaku.ijk.media.demo.FFMpegFileExplorer"
            android:label="@string/app_name" >
        </activity>
        
		 <activity
            android:name="tv.danmaku.ijk.media.app.activity.PortalActivity"
            android:label="@string/app_name" >
     		 <intent-filter>
     		    <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
        
		<activity
            android:name="tv.danmaku.ijk.media.app.activity.ChannelListActivity"
            android:theme="@style/ActionBarTheme"
            android:logo="@drawable/titlebar_back"
            android:label="">
     		 <!-- 导航跳转到父Activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tv.danmaku.ijk.media.app.activity.PortalActivity" >
            </meta-data>
        </activity>
        
		<activity
            android:name="tv.danmaku.ijk.media.app.activity.MediaPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="video/*" />
                <data android:mimeType="audio/*" />
                <data android:scheme="http" />
                <data android:scheme="file" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="tv.danmaku.ijk.media.app.activity.SplashActivity"
            android:label="@string/app_name" >
 <!--     		 <intent-filter>
     		    <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter> -->
    	</activity>
    	
       <activity
            android:name="tv.danmaku.ijk.media.app.activity.TVPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
    	</activity>
    </application>

</manifest>
